<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="12dp" android:orientation="vertical">
    <Spinner android:id="@+id/sp_course" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/input_title" android:hint="عنوان المهمة" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/input_due" android:hint="الموعد (انقر للاختيار)" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Spinner android:id="@+id/sp_status" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/input_remind" android:hint="التذكير قبل (دقائق)" android:inputType="number" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
</ScrollView>
